<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">
            @color/black
        </item>
    </style>

    <!-- This is for a blank activity -->
    <style name="DarkActivity" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">
            @color/black
        </item>
    </style>

    <!-- This is for font style -->

    <style name="danceability">
        <item name="android:textSize">
            18sp
        </item>

        <item name="android:textColor">
            @color/white
        </item>

        <item name="android:fontFamily">
            Roboto-Thin
        </item>
    </style>



</resources>
